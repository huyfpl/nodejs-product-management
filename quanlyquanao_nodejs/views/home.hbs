<style>
  table {
    width: 100%;
    text-align: center;
  }

  table th,
  table td {
    padding: 10px;
  }

  table th:first-child,
  table td:first-child {
    text-align: left;
  }

  table th:nth-child(2),
  table td:nth-child(2) {
    width: 30%;
  }

  table th:nth-child(3),
  table td:nth-child(3) {
    width: 20%;
  }

  table th:nth-child(4),
  table td:nth-child(4),
  table th:nth-child(5),
  table td:nth-child(5) {
    width: 10%;
  }

  table td img {
    display: block;
    margin: 0 auto;
    max-width: 80px;
    max-height: 80px;
    border-radius: 50%;
  }

  .btn-edit {
    background-color: green;
    color: white;
    text-decoration: none;
  }

  .btn-delete {
    background-color: red;
    color: white;
    text-decoration: none;
  }
</style>

<div class="container" style="max-width: 800px; margin: 10px auto;">
  <form action="/search" method="get" class="search-form">
    <div class="input-group mb-3">
      <input type="text" class="form-control" placeholder="Enter employee name" name="name" style="width: 200px;">
      <button type="submit" class="btn btn-primary">Search</button>
    </div>
  </form>

  <a href="/add" style="display: flex; justify-content: center; margin-bottom: 20px;">
    <h1>Thêm sản phẩm</h1>
  </a>

  <table class="table align-middle mb-0 bg-white">
    <thead class="bg-light">
      <tr>
        <th>Mã </th>
        <th>Tên sản phẩm</th>
        <th>Ảnh sản phẩm</th>
        <th>Size</th>
        <th>Giá</th>
        <th>Manage</th>
      </tr>
    </thead>
    <tbody>
      {{#each data}}
      <tr>
        <td
          onmouseover="showProductDetail('{{this.masp}}', '{{this.tensp}}', '{{this.imagesp}}', '{{this.sizesp}}', '{{this.giasp}}')"
          onmouseout="hideProductDetail()">
          <p class="fw-normal mb-1">{{this.masp}}</p>
        </td>
        <td>
          <p class="fw-normal mb-1">{{this.tensp}}</p>
        </td>
        <td>
          <div class="d-flex align-items-center">
            <img src="{{this.imagesp}}" alt=" lỗi ảnh ! " class="rounded-circle"
              style="color: red; font-weight: bold;" />
          </div>
        </td>
        <td>
          <p>{{this.sizesp}}</p>
        </td>
        <td>
          <p>{{this.giasp}}</p>
        </td>
        <td>
          <a href="/edit/{{this.masp}}" class="btn btn-link btn-sm btn-rounded btn-edit">Edit</a>
          <a href="/delete/{{this.masp}}" class="btn btn-link btn-sm btn-rounded btn-delete"
            onclick="return confirm('Bạn có muốn xóa thật không?')">Delete</a>
        </td>
      </tr>
      {{/each}}
    </tbody>

  </table>
</div>